<?php
include 'db_connection.php'; // Replace with your actual connection file

if (isset($_GET['id'])) {
    $userId = intval($_GET['id']);
    
    $query = "SELECT email, Student_Name FROM student_info WHERE id = $userId";
    $result = mysqli_query($conn, $query);

    if ($result && $row = mysqli_fetch_assoc($result)) {
        $to = $row['email'];
        $studentName = $row['Student_Name'];
        $subject = "Notice Regarding Your Violation";
        $message = "Dear $studentName,\n\nYou have a recorded violation. Please check with the discipline office for details.\n\nThank you.";
        $headers = "From: your_email@example.com";

        if (mail($to, $subject, $message, $headers)) {
            echo "Email sent successfully to $to.";
        } else {
            echo "Failed to send email.";
        }
    } else {
        echo "Student not found.";
    }
} else {
    echo "No ID provided.";
}
?>
